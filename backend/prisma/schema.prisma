generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ProductImageUrls {
  image_url_0 String
  image_url_1 String
  image_url_2 String?
  image_url_3 String?
  image_url_4 String?
  image_url_5 String?
}

model Product {
  id                  String           @id @default(auto()) @map("_id") @db.ObjectId
  image_urls          ProductImageUrls
  price               String
  product_description String
  specific_type       String
  title               String
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  email       String @unique
  name        String
  password    String
  phoneNumber String @unique
  username    String
}
