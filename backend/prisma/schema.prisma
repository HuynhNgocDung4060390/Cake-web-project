generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type BlogComments {
  author  String
  comment String
  email   String
}

type BlogContent {
  description String?
  /// Multiple data types found: String: 85.7%, Array(String): 14.3% out of 7 sampled entries
  detail      Json?
  imageUrl    String?
  type        String
}

type ProductImageUrls {
  image_url_0  String
  image_url_1  String
  image_url_2  String?
  image_url_3  String?
  image_url_4  String?
  image_url_5  String?
  image_urls_0 String?
  image_urls_1 String?
  image_urls_2 String?
  image_urls_3 String?
}

type UserAddressDetails {
  address  String
  district String
  province String
  ward     String
}

model Blog {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  comments    BlogComments
  content     BlogContent[]
  coverImage  String
  publishdate DateTime      @db.Date
  slug        String
  title       String
  views       String
}

model Product {
  id                  String           @id @default(auto()) @map("_id") @db.ObjectId
  image_urls          ProductImageUrls
  price               String
  product_description String
  specific_type       String
  title               String
}

model User {
  id             String             @id @default(auto()) @map("_id") @db.ObjectId
  addressDetails UserAddressDetails?
  email          String?             @unique
  name           String?
  password       String
  phoneNumber    String?             @unique
}
